<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container py-4">
  <%- include('partials/navbar') %>
  <h1>MindCare</h1>
  <p class="text-muted">Catat mood harianmu dan temukan tips sederhana.</p>

  <a class="btn btn-success mb-3" href="/create">Input Mood</a>

  <table class="table table-striped">
    <thead>
      <tr><th>Tanggal</th><th>User</th><th>Mood</th><th>Catatan</th><th>Aksi</th></tr>
    </thead>
    <tbody>
      <% moods.forEach(m => { %>
        <tr>
          <td><%= new Date(m.date).toLocaleDateString('id-ID') %></td>
          <td><%= m.user_name %></td>
          <td><%= m.mood_level %></td>
          <td><%= m.notes || '-' %></td>
          <td>
            <a href="/moods/<%= m.mood_id %>/edit" class="btn btn-sm btn-primary">Edit</a>
            <form action="/moods/<%= m.mood_id %>/delete" method="post" style="display:inline;">
              <button class="btn btn-sm btn-danger">Hapus</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include('partials/footer') %>
</body>
</html>
